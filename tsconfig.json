{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "lib": ["es2019"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["src", "tests", "scripts"],
  "exclude": ["tests/fixtures"]
}